<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.controllers.SignupController">
   <children>
      <AnchorPane layoutY="-4.0" prefHeight="329.0" prefWidth="361.0">
         <children>
            <Button fx:id="createButton" layoutX="206.0" layoutY="250.0" mnemonicParsing="false" text="Create" />
            <Button fx:id="signinButton" layoutX="272.0" layoutY="250.0" mnemonicParsing="false" onAction="#signinButtonHandler" text="Sign In" />
            <VBox layoutX="40.0" layoutY="62.0" prefHeight="223.0" prefWidth="149.0">
               <children>
                  <Label text="First Name:" />
                  <TextField fx:id="firstNameField" />
                  <Label text="Last Name:" />
                  <TextField fx:id="lastNameField" />
                  <Label text="Email:" />
                  <TextField fx:id="emailField" />
                  <Label text="Username:" />
                  <TextField fx:id="usernameField" />
                  <Label text="Password:" />
                  <TextField fx:id="passwordField" />
               </children>
            </VBox>
            <Label layoutX="115.0" layoutY="27.0" text="Create an account">
               <font>
                  <Font size="18.0" />
               </font>
            </Label>
         </children>
      </AnchorPane>
   </children>
</AnchorPane>
